<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
<mapper namespace="org.sm.mapper.OrderMapper">
   
   
   <resultMap type="Order" id="orderResultMap">
       <id property="id" column="id"/>
       <result property="code" column="code"/>
       <result property="total" column="total"/>
       
       <association property="user" javaType="User" column="uid" select="org.sm.mapper.UserMapper.selectUserWithId" fetchType="lazy">
       </association>
       <collection property="articles" javaType="ArrayList" column="id" ofType="Article" select="org.sm.mapper.ArticleMapper.selectArticleByOrderId" >
       </collection>
   </resultMap>
   
  <select id="selectOrderById" parameterType="int" resultMap="orderResultMap">
        select o.id , o.code , o.total , u.id as uid from tb_order o left join tb_user u on (o.user_id = u.id) where o.id = #{id}
  </select>
  
  <select id="selectOrderByUserId" parameterType="int" resultType="Order">
     select * from tb_order where user_id = #{id}
  </select>
  
</mapper>
